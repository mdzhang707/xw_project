package com.manage.service;

import java.util.List;
import java.util.ArrayList;

import com.jfinal.aop.Before;
import com.jfinal.plugin.activerecord.Page;
import com.jfinal.plugin.activerecord.tx.Tx;
import com.manage.model.ModelUtil;
import com.manage.model.OrderInfo;
import com.manage.model.OrderInfoDetail;

public class OrderManager {
	public static final List<OrderInfo> list(OrderInfo order, int offset, int limit){
		StringBuffer where = new StringBuffer("from orderinfo where deleted=0");
		List<Object> params = new ArrayList<Object>();
		if(order.getCreateUser() != null && !"".equals(order.getCreateUser().trim())){
			where.append(" and createUser=?");
			params.add(order.getCreateUser().trim());
		}
		if(order.getShopCode() != null && !"".equals(order.getShopCode().trim())	){
			where.append(" and shopCode=?");
			params.add(order.getShopCode().trim());
		}
		where.append(" order by createTime desc");		
		Page<OrderInfo> orders = OrderInfo.dao.paginate(offset, limit, "select *", where.toString(), params);
		return orders.getList();
	}
	
	@Before(Tx.class)
	public static final boolean create(OrderInfo order){
		ModelUtil.generateUid(order);
		for(OrderInfoDetail detail:order.getDetails()){
			ModelUtil.generateUid(detail);
			detail.setOrderId(order.getStr("uid"));
			detail.save();
		}
		return order.save();
	}
	
	@Before(Tx.class)
	public static final boolean delete(String key){
		OrderInfo order = OrderInfo.dao.findFirst(
				"select * from orderInfo where deleted=0 and uid=?", key);
		
	}
	
	public static final boolean edit(OrderInfo order){
		OrderInfo model = OrderInfo.dao.findFirst(
				"select * from orderInfo where deleted=0 and uid=?", order.getStr("uid"));
		if(model != null){
			order.set("iid", model.getInt("iid"));
			return order.save();
		}
		return false;
	}
}
