package com.manage.controller;

import com.jfinal.core.Controller;
import com.manage.model.OrderInfo;
import com.manage.service.OrderInfoManager;

public class OrderController extends Controller{
	public void list(){
		OrderInfo order = new OrderInfo();
		order.setCreateUser(this.getPara("createUser"));
		order.setShopCode(this.getPara("shopCode"));
		int offset = this.getParaToInt("offset");
		int limit = this.getParaToInt("limit");
		renderJson("shops", OrderInfoManager.list(order, offset, limit));		
	}
	
	public void create(){
		OrderInfo order = new OrderInfo();
		order.set("createUser", this.getPara("createUser"));
		order.set("shopCode",this.getPara("shopCode"));
		order.set("total",this.getParaToLong("total"));
		order.set("status",this.getParaToInt("status"));
		order.set("address",this.getParaToLong("address"));
		order.set("userName",this.getPara("userName"));
		order.set("salesVolume",this.getPara("salesVolume"));
		order.set("attributes",this.getPara("attributes"));
		order.set("singlTag",this.getPara("singlTag"));
		order.set("Count",this.getParaToInt("Count"));
		renderJson("succeed", OrderInfoManager.create(order));
	}
	
	public void edit(){
		OrderInfo order = new OrderInfo();
		order.set("name", this.getPara("name"));
		order.set("uuid", this.getPara("uuid"));
		order.set("type", 1);
		order.set("shop",this.getPara("shop"));
		order.set("showPrice",this.getParaToLong("showPrice"));
		order.set("salesPrice",this.getParaToLong("salesPrice"));
		order.set("origPrice",this.getParaToLong("origPrice"));
		order.set("image",this.getPara("image"));
		order.set("salesVolume",this.getPara("salesVolume"));
		order.set("attributes",this.getPara("attributes"));
		order.set("singlTag",this.getPara("singlTag"));
		order.set("Count",this.getParaToInt("Count"));
		renderJson("succeed", OrderInfoManager.edit(order));
	}
	
	public void delete(){
		String uuid = this.getPara("uuid");
		renderJson(OrderInfoManager.delete(uuid));
	}
}
